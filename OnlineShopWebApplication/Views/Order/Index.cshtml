
<form method="post">
    <div class="col-3">
        <div class="mb-3">
            <label for="phone" class="form-label">Номер телефона</label>
            <p><input type="tel" name="phone" pattern="\+7\-[0-9]{3}\-[0-9]{3}\-[0-9]{2}\-[0-9]{2}" placeholder="+7(000)000-00-00"></p>
        </div>

        <label for="exampleFormControlInput1" class="form-label">Email</label>
        <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com">


        <label for="exampleInputEmail1" class="form-label">Повторите Email (только ручной ввод)</label>
        <input type="email" name="email" class="form-control" id="repit-email" placeholder="name@example.com" style="margin-bottom: 15px">
    </div>

    <button type="submit" class="btn btn-dark" onclick="Accept()">Подтвердить</button>


    <script>
        function Accept() {
            event.preventDefault();
            Swal.fire({
                icon: 'success',
                title: 'Ваш заказ успешно оформлен!',
                showConfirmButton: false,
                timer: 1000
            })
            setTimeout(function () {
                window.location.href="@Url.Action("Buy", "Order")";
            }, 1000);
        }
    </script>
</form>

<script>
    document.getElementById("repit-email").addEventListener("paste", function (e) {
        e.preventDefault();
    });
</script>