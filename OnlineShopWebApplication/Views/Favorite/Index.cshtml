@model List<Product>

<h2>Избранное</h2>

@{
    if (@Model.Count == 0)
    {
        <h3>В избранном пока нет товаров</h3>
    }
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-3 card">
            <div class="card-body">
                @* третий параметр в Url.Action должен быть парой ключ/значение. *@
                <h4 class="product-name" onclick="window.location.href='@Url.Action("Index", "Product", new { id = product.Id })'" style="cursor: pointer;">@product.Name</h4>
                <img class="card-img-top" src="@Url.Content(product.ImgPath)" />
                <h5>
                    Цена: @product.Cost ₽
                </h5>
                <button class="btn btn-dark" href="/cart/add?productId=@product.Id">Добавить в корзину</button>
            </div>
        </div>
        <br />
    }
</div>