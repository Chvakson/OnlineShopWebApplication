@model FavoriteInMemoryStorage

<h2>Избранное</h2>

@{
    if (Model == null || Model.Favorites.Count == 0)
    {
        <h3>В избранном пока ничего нет</h3>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col-3">Название</th>
                    <th scope="col-3">Цена</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Favorites)
                {
                    <tr>
                        <td class="col-3">@item.Name</td>
                        <td class="col-3">@item.Cost руб.</td>
                    </tr>
                }
            </tbody>
        </table>
        @*<div class="container">
            <div class="row">
                <h5 class="text-sm-end">Итого: @Model.Cost руб.</h5>
            </div>
        </div>*@

        @*<div class="text-center">
            <a role="button" class="btn btn-dark" href="@Url.Action("Index", "Home")">Продолжить покупки</a>
            <a role="button" class="btn btn-dark" href="@Url.Action("Index", "Order")">Оформить заказ</a>
            <a role="button" class="btn btn-dark" href="@Url.Action("Clear", "Cart")">Очистить корзину</a>
        </div>*@
    }
}