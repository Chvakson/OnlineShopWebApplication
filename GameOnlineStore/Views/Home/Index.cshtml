@model List<ProductViewModel>

<div class="d-flex justify-content-center">
    <form action="/" method="post">
        <div class="mb-3  d-md-inline-flex" style="width: 600px">
            <input type="text" class="form-control" name="query" placeholder="Поиск...">
            <button class="btn btn-dark d-flex align-items-center justify-content-center" type="submit">
                <span class="material-icons">
                    Найти
                </span>
            </button>
        </div>
    </form>
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="card col-4 border-secondary">
            <a class="card-header" style="cursor: pointer" asp-area="" asp-controller="Product"asp-action="Index" asp-route-productId="@product.Id">
                <h4>@product.Name</h4>
            </a>
            <div class="card-body text-secondary">
                <img src="@Url.Content(product.ImgPath)" class="card-img-top" alt="...">
                <p class="card-text">Цена: @product.Cost р.</p>
                <a class="btn btn-dark" asp-area="" asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id">Добавить в корзину</a>
                <a class="btn btn-dark" asp-area="" asp-controller="Favorite" asp-action="Add" asp-route-productId="@product.Id">Добавить в избранное</a>
                <a class="btn btn-dark" asp-area="" asp-controller="Compared" asp-action="Add" asp-route-productId="@product.Id">Добавить в сравнение</a>
            </div>
        </div>
    }
</div>
