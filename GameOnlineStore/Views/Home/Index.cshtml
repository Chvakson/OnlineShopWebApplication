
@model List<Product>


<div class="row">
    @foreach (var product in Model)
    {
        <div class="card col-4 border-secondary">
            <h4 class="card-header" onclick="window.location.href='@Url.Action("Index", "Product", new { productId = product.Id })'" style="cursor: pointer">@product.Name</h4>
            <div class="card-body text-secondary">
                <img src="@Url.Content(product.ImgPath)" class="card-img-top" alt="...">
                <p class="card-text">Цена: @product.Cost р.</p>
                <button class="btn btn-dark" onclick="window.location.href='@Url.Action("Add", "Cart", new { productId = product.Id })'">Добавить в корзину</button>
                <button class="btn btn-dark" onclick="window.location.href='@Url.Action("Add", "FavoriteProducts", new { productId = product.Id })'">Добавить в избранное</button>
                <button class="btn btn-dark" onclick="window.location.href='@Url.Action("Add", "CompareProducts", new { productId = product.Id })'">Добавить в сравнение</button>
                @* <div class="form-check">
                    <input class="form-check-input bg-dark" type="checkbox" value="" id="compare_checkbox">
                    <label class="form-check-label" for="compare_checkbox">
                        Добавить в сравнение
                    </label>
                </div> *@
            </div>
        </div>
    }
</div>
