@model Product

<div class="row">
    <div class="col-6">
        <div class="card border-secondary">
            <h5 class="card-header">@Model.Name</h5>
            <div class="card-body text-secondary">
                <img src="@Url.Content(Model.ImgPath)" class="card-img-top" alt="...">
                <p class="card-text">Цена: @Model.Cost р.</p>
                <a class="btn btn-dark" asp-area="" asp-controller="Cart" asp-action="Add" asp-route-productId="@Model.Id">Добавить в корзину</a>
                <a class="btn btn-dark" asp-area="" asp-controller="FavoriteProducts" asp-action="Add" asp-route-productId="@Model.Id">Добавить в избранное</a>
                <a class="btn btn-dark" asp-area="" asp-controller="Home" asp-action="Index">Продожить покупки</a>
            </div>
        </div>
    </div>
    <div class="col-6 card">
        <p class="card-text">@Model.Description</p>
    </div>
</div>

