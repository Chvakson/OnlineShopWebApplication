<h4>Добавление нового продукта</h4>

<form method="post">
    <p>Название продукта</p>
    <div class="mb-3 col-4">
        <input type="text" class="form-control" name="name">
    </div>

    <p>Цена</p>
    <div class="mb-3 col-4">
        <input type="number" class="form-control" name="cost">
    </div>

    <p>Описание</p>
    <div class="mb-3 col-6">
        <textarea style="height:200px" class=" form-control" name="description"></textarea>
    </div>

    <button type="submit" class="btn btn-dark" asp-controller="Admin" asp-action="AddNewProduct">Сохранить</button>
</form>