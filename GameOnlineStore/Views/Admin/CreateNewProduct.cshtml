@model Product

<h4>Добавление нового продукта</h4>

<form method="post">
    <div class="col mb-3" style="display: flex; flex-direction: column;">
        <label>Название продукта</label>
        <input class="col-4" asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>

    <div class="col mb-3" style="display: flex; flex-direction: column;">
        <label>Цена</label>
        <input class="col-2" asp-for="Cost">
        <span asp-validation-for="Cost"></span>
    </div>

    <div class="col mb-3" style="display: flex; flex-direction: column;">
        <label>Описание</label>
        <textarea class="col-7" style="height:200px" asp-for="Description"></textarea>
        <span asp-validation-for="Description"></span>
    </div>

    <div class="col mb-3" style="display: flex; flex-direction: column;">
        <label>Ссылка на изображение</label>
        <input class="col-4" asp-for="ImgPath">
        <span asp-validation-for="ImgPath"></span>
    </div>

    <button type="submit" class="btn btn-dark" asp-controller="Admin" asp-action="AddNewProduct">Сохранить</button>
</form>