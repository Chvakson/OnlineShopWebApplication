@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>
<div class="row">
    @await Html.PartialAsync("AdminLeftPanel")
    <div class="col-9">
        <h2>Список ролей</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Название</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Name</td>
                        <td>
                            <a class="btn btn-dark" asp-area="Admin" asp-controller="Role" asp-action="Remove" asp-route-name="@Model[i].Name">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-dark" asp-area="Admin" asp-controller="Role" asp-action="Create">Создать</a>
    </div>
</div>
