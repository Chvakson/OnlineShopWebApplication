@model List<Order>
<div class="row">
    @await Html.PartialAsync("AdminLeftPanel")
    <div class="col-9">
        <h2>Список заказов</h2>
        <table class="table">
            <thead>
                <tr>
                    <th class="col-1" scope="col">№</th>
                    <th class="col-2" scope="col">Сумма</th>
                    <th class="col-2" scope="col">Статус</th>
                    <th class="col-4" scope="col">Пользователь (логин)</th>
                    <th class="col-2" scope="col">Дата</th>
                    <th class="col-1" scope="col">Время</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr onclick="redirectToController('@Model[i].Id')">
                        <th scope="row">@(i + 1)</th>
                        <td>@Model[i].Cost ₽</td>
                        <td>@EnumHelper.GetDisplayName(Model[i].Status)</td>
                        <td>user@mail.ru</td>
                        <td>@Model[i].OrderDateTime.ToString("d")</td>
                        <td>@Model[i].OrderDateTime.ToString("t")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function redirectToController(id) {
        window.location.href = '/Admin/Order/OrderDetails/' + id;
    }
</script>

